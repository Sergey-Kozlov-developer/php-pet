{% extends 'layout.twig' %}

{% block title %}Регистрация | MySite{% endblock %}

{% block content %}
    <section class="auth-section">
        <div class="container">
            <div class="auth-form">
                <h1>Создать аккаунт</h1>

                {% if session.errors.register %}
                    <div class="alert alert-danger">
                        <ul>
                            {% for error in session.errors.register %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <form action="{{ host }}/auth/register" method="POST">
                    <div class="form-group">
                        <label for="name">Имя</label>
                        <input type="text" id="name" name="name" required>
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Пароль</label>
                        <input type="password" id="password" name="password" required>
                    </div>

                    <div class="form-group">
                        <label for="password_confirmation">Подтвердите пароль</label>
                        <input type="password" id="password_confirmation" name="password_confirmation" required>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                        <a href="{{ host }}/login" class="btn btn-link">Уже есть аккаунт? Войти</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}